      <table>
        <title>管理网络窗口设置项目</title>
        <tgroup cols="2" align="left" colsep="1" rowsep="1">
          <thead>
            <row>
              <entry>
                项目
              </entry>
              <entry>
                描述/动作
              </entry>
            </row>
          </thead>
